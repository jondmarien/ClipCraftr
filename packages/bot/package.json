{
  "name": "@clipcraftr/bot",
  "version": "0.1.0",
  "private": true,
  "description": "Discord bot for ClipCraftr",
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "build": "swc src --out-dir dist --copy-files",
    "dev": "tsx watch src/index.ts",
    "start": "node dist/index.js",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "test:db": "node -r @swc/register scripts/test-db.ts",
    "lint": "eslint . --ext .ts",
    "lint:fix": "eslint . --ext .ts --fix",
    "format": "prettier --write ."
  },
  "dependencies": {
    "@discordjs/builders": "^1.6.3",
    "@discordjs/rest": "^1.7.0",
    "@sapphire/async-queue": "^1.5.0",
    "@types/mongoose": "^5.11.97",
    "discord-api-types": "^0.37.36",
    "discord.js": "^14.14.1",
    "dotenv": "^16.3.1",
    "ffmpeg-static": "^5.2.0",
    "ffmpeggy": "^1.0.0",
    "mongodb": "^6.16.0",
    "mongoose": "^8.0.3",
    "tsx": "^4.7.0",
    "typescript": "^5.0.0",
    "uuid": "^9.0.1",
    "winston": "^3.11.0",
    "winston-daily-rotate-file": "^5.0.0"
  },
  "devDependencies": {
    "@babel/core": "^7.24.5",
    "@babel/preset-env": "^7.24.5",
    "@babel/preset-typescript": "^7.27.1",
    "@swc/cli": "^0.7.7",
    "@swc/core": "^1.11.29",
    "@swc/helpers": "^0.5.17",
    "@types/node": "^22.15.29",
    "@typescript-eslint/eslint-plugin": "^6.4.0",
    "@typescript-eslint/parser": "^6.4.0",
    "cross-env": "^7.0.3",
    "dotenv-expand": "^12.0.2",
    "eslint": "^8.45.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-prettier": "^5.0.0",

    "prettier": "^3.0.2"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
