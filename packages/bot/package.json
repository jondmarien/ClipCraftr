{
  "name": "@clipcraftr/bot",
  "version": "0.1.0",
  "private": true,
  "description": "Discord bot for ClipCraftr",
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "build": "swc src --out-dir dist --copy-files",
    "dev": "tsx watch src/index.ts",
    "start": "node dist/index.js",
    "test": "jest --detectOpenHandles --forceExit --runInBand",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:db": "node -r @swc/register scripts/test-db.ts",
    "lint": "eslint . --ext .ts",
    "lint:fix": "eslint . --ext .ts --fix",
    "format": "prettier --write ."
  },
  "dependencies": {
    "@discordjs/builders": "^1.6.3",
    "@discordjs/rest": "^1.7.0",
    "@sapphire/async-queue": "^1.5.0",
    "@types/mongoose": "^5.11.97",
    "discord-api-types": "^0.37.36",
    "discord.js": "^14.14.1",
    "dotenv": "^16.3.1",
    "ffmpeg-static": "^5.2.0",
    "ffmpeggy": "^1.0.0",
    "mongodb": "^6.16.0",
    "mongoose": "^8.0.3",
    "tsx": "^4.7.0",
    "typescript": "^5.0.0",
    "uuid": "^9.0.1",
    "winston": "^3.11.0",
    "winston-daily-rotate-file": "^5.0.0"
  },
  "devDependencies": {
    "@jest/globals": "30.0.0-beta.3",
    "@swc/cli": "^0.7.7",
    "@swc/core": "^1.11.29",
    "@swc/helpers": "^0.5.17",
    "@swc/jest": "^0.2.37",
    "@types/jest": "^29.5.14",
    "@types/node": "^18.19.110",
    "@typescript-eslint/eslint-plugin": "^6.4.0",
    "@typescript-eslint/parser": "^6.4.0",
    "cross-env": "^7.0.3",
    "dotenv-expand": "^12.0.2",
    "eslint": "^8.45.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-prettier": "^5.0.0",
    "jest": "^29.7.0",
    "prettier": "^3.0.2",
    "ts-jest": "^29.3.4"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
