{
  "name": "@clipcraftr/server",
  "version": "0.1.0",
  "private": true,
  "description": "Backend server for ClipCraftr",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "build": "swc src --out-dir dist --copy-files",
    "dev": "swc src --out-dir .swc --copy-files --watch & node --watch .swc/index.js",
    "start": "node .swc/index.js",
    "test": "jest --detectOpenHandles --forceExit --runInBand",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint": "eslint . --ext .ts",
    "lint:fix": "eslint . --ext .ts --fix",
    "format": "prettier --write ."
  },
  "dependencies": {
    "@fastify/cors": "^8.5.0",
    "@fastify/helmet": "^13.0.1",
    "@fastify/sensible": "^5.6.0",
    "@fastify/swagger": "^8.15.0",
    "@fastify/swagger-ui": "^1.10.2",
    "@fastify/websocket": "^8.3.1",
    "dotenv": "^16.5.0",
    "fastify": "^4.29.1",
    "fastify-plugin": "^4.5.0",
    "mongoose": "^8.15.1",
    "pino-pretty": "^10.3.1",
    "socket.io": "^4.7.2",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@fastify/type-provider-typebox": "^3.4.0",
    "@sinclair/typebox": "^0.32.8",
    "@swc/cli": "^0.7.7",
    "@swc/core": "^1.11.29",
    "@swc/helpers": "^0.5.17",
    "@swc/jest": "^0.2.38",
    "@types/jest": "^29.5.14",
    "@types/node": "^18.19.110",
    "@types/ws": "^8.5.10",
    "@typescript-eslint/eslint-plugin": "^6.4.0",
    "@typescript-eslint/parser": "^6.4.0",
    "eslint": "^8.45.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-prettier": "^5.0.0",
    "jest": "^29.7.0",
    "prettier": "^3.0.2",
    "ts-node": "^10.9.2",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.8.3"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
